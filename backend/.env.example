# üîê SECURITY CONFIGURATION
# Copy this to .env and update with your actual values
# Never commit .env files to version control

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=5000

# ================================
# DATABASE CONFIGURATION
# ================================
# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/phase1-db?retryWrites=true&w=majority

# ================================
# JWT & AUTHENTICATION
# ================================
# JWT Secret - Generate a strong secret key
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration (default: 30 days)
JWT_EXPIRE=30d

# ================================
# FRONTEND CONFIGURATION
# ================================
# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
# For password reset and notifications
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@taskmanager.com

# ================================
# SECURITY SETTINGS
# ================================
# Session secret for cookie signing
SESSION_SECRET=your-session-secret-key

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# SSL/HTTPS CONFIGURATION
# ================================
# Set to true in production with proper SSL certificates
FORCE_HTTPS=false

# SSL Certificate paths (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# ================================
# LOGGING & MONITORING
# ================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable security event logging
SECURITY_LOGGING=true

# ================================
# EXTERNAL SERVICES (Optional)
# ================================
# For advanced features like push notifications, analytics, etc.
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=

# Google OAuth (if implementing social login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ================================
# BACKUP & MAINTENANCE
# ================================
# Database backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Only used in development
DEV_CORS_ORIGIN=*
DEV_ENABLE_DEBUG=true