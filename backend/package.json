{
  "name": "backend-phase-1",
  "version": "1.0.0",
  "description": "backend for task manager",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate:tasks": "node scripts/migrateTasks.js",
    "setup:security": "node scripts/setup-security.js",
    "setup:dev": "node scripts/setup-security.js development",
    "setup:staging": "node scripts/setup-security.js staging", 
    "setup:prod": "node scripts/setup-security.js production",
    "test:security": "echo 'Import docs/security-test-collection.json into Postman for comprehensive security testing'",
    "verify:security": "node scripts/verify-security.js",
    "audit:security": "npm audit && echo 'Security audit completed. Review any vulnerabilities above.'",
    "start:prod": "NODE_ENV=production node server.js",
    "start:staging": "NODE_ENV=staging node server.js"
  },
  "keywords": [
    "backend",
    "mongo.db"
  ],
  "author": "Rohit",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
